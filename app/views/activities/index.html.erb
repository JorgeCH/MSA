<p id="notice"><%= notice %></p>

<h1>Listing Activities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Place</th>
      <th>Description</th>
      <th>Linkfb</th>
      <th>Contact</th>
      <th>Photo1</th>
      <th>Photo2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.date %></td>
        <td><%= activity.place %></td>
        <td><%= activity.description %></td>
        <td><%= activity.linkfb %></td>
        <td><%= activity.contact %></td>
        <td><%= activity.photo1 %></td>
        <td><%= activity.photo2 %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

