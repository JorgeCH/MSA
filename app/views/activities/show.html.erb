<div class="main" id="two">
  <div class="container">
    <div class="content">


      <div class="right-cont">
      <hr class="first">
        <h1><%= @activity.name %></h1>
        <hr class="second">
        <%= simple_format(@activity.description) %>
        <hr class="third">
        <%= image_tag(@activity.photo1) %>
        <%= image_tag(@activity.photo2) %>
      </div>
      <div class="left-cont">
        <h3><p>Fecha: <%= @activity.date %></p></h3>
        <h3><p>Lugar: <%= @activity.place %></p></h3>
        <h3><p>Link de Facebook: <%= link_to @activity.linkfb, @activity.linkfb %></p></h3>
        <h3><p>Contacto: <%= @activity.contact %></p></h3>
        <h3>
          <% if current_user %> 
            <p><%= link_to 'Edit', edit_activity_path(@activity) %></p>
          <% end %>
        </h3>
        <div class="pad"><a href="/activities"><button>Back</button></a></div>
      </div>

    </div>
  </div>
</div>



