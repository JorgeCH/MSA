<div class="main" id="two">
	<div class="panel">

		<h1 class="cent-h"> Usuarios </h1>


		<div id='users'>
			<% @users.each do |user| %>
				<p class="mail"><%= user %></p>
				<div class="new-2">
					<p class="option" id="op-1"><%= link_to "Edit User", edit_admin_user_path(user) %>
					</p>
				</div>
				<div class="new-2">
					<p class="option" id="op-2"><%= link_to "Delete User", admin_user_path(user), method: :delete,
					data: { confirm: "Are you sure you want to delete this user?"} %>
					</p>
				</div>
			<% end %>
		</div>

		<div class="new">
			<%= link_to "Nuevo Usuario", new_admin_user_path %>
		</div>
	</div>
</div>