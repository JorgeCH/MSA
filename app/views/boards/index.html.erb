<div class="main" id="two">
  <div class="container">
    <div class="content">

      <% @boards.each do |board| %>
        <div class="board">
          <div class="board-img">
            <%= link_to image_tag(board.photo), board %></td>
          </div>

          <div class="board-text">
            <h3><%= board.name %></h3>
            <h3><%= board.position %></h3>
            <h3><%= board.email %></h3>
            <h3><%= board.year %></h3>
            <% if current_user %> 
              <td><%= link_to 'Edit ', edit_board_path(board) %></td>|
              <td><%= link_to ' Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %> 
          </div>
        </div>
      <% end %>
      <div class="new">
            <% if current_user %>
              <%= link_to 'New Board', new_board_path %>
            <% end %>
      </div>
    </div>
  </div>
</div>



