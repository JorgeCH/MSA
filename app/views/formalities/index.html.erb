<p id="notice"><%= notice %></p>

<h1>Listing Formalities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @formalities.each do |formality| %>
      <tr>
        <td><%= formality.name %></td>
        <td><%= formality.description %></td>
        <td><%= formality.image %></td>
        <td><%= link_to 'Show', formality %></td>
        <% if current_user %>
        <td><%= link_to 'Edit', edit_formality_path(formality) %></td>
        <td><%= link_to 'Destroy', formality, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
  <%= link_to 'New Formality', new_formality_path %>
<% end %>
