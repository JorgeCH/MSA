<!DOCTYPE html>
<html>
<head>
  <title>MSA</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Roboto+Mono:400,700' rel='stylesheet' type='text/css'>
</head>
<body>

<% flash.each do |key, value| %>
  <div class='flash' id='<%= key %>'>
    <%= value %>
  </div>
<% end %>

<div class="header">
	<div class="menu">
		<div><%= link_to 'Home', root_path %></div>
		<% if current_user %><div><%= link_to 'MSA', descriptions_path %></div><% end %>
		<div><%= link_to 'Board', boards_path %></div>
		<div><%= link_to 'Activities', activities_path %></div>
		<div><%= link_to 'Consejos', prearrivals_path %></div>
		<div><%= link_to 'Tramites', formalities_path %></div>
		<div><%= link_to 'Vida', lives_path %></div>
		<div><%= link_to 'Becas', scholarships_path %></div>
		<div><%= link_to 'Practicas', jobs_path %></div>
		<div><%= link_to 'Noticias', announcements_path %></div>
		<div>
			<% if current_user %>
				<%= link_to "Log out", logout_path, method: :delete %>
			<% else %>
				<%= link_to "Log In", login_path %>
			<% end %>
		</div>
		<div>
			<% if current_user %>
				<% admins_only do %>
					<%= link_to "Admin Panel", admin_root_path %>
				<% end %>
			<% else %>
				
			<% end %>
		</div>
	</div>
</div>

<%= yield %>

</body>
</html>
